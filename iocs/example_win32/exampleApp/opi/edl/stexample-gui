#!/bin/sh
# first load the paths. These have been generated from the configure/RELEASE
# tree. If we have a -d arg then load the opi/edl paths first
if [ "$1" = "-d" ]; then
    export EDMDATAFILES=/dls_sw/work/R3.14.11/support/ffmpegServer/iocs/example/exampleApp/opi/edl:.
    export EDMDATAFILES=${EDMDATAFILES}:    
    OPTS="-x -eolc"
else
    export EDMDATAFILES=.
    OPTS="-x -eolc -noedit"
fi
export EDMDATAFILES=${EDMDATAFILES}:/dls_sw/work/R3.14.11/support/ffmpegServer/iocs/example/data
export EDMDATAFILES=${EDMDATAFILES}:/dls_sw/prod/R3.14.11/support/areaDetector/1-5dls1/data
export EDMDATAFILES=${EDMDATAFILES}:/dls_sw/work/R3.14.11/support/ffmpegServer/data

# Set the path to include any scripts in data dirs
export PATH=${EDMDATAFILES}:${PATH}
edm ${OPTS} -m "dom=example" /dls_sw/work/R3.14.11/support/ffmpegServer/iocs/example/exampleApp/opi/edl/exampleTop.edl